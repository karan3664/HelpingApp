<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:isScrollContainer="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@drawable/profile_bg">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/profile_bg"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/ic_user"
                            app:civ_border_color="@color/white_color"
                            app:civ_border_width="@dimen/_2sdp">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivProfile"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Add Picture"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/profile_edittext_bg">

                                <EditText
                                    android:id="@+id/userNameEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:hint="Enter Username"
                                    android:inputType="text"
                                    android:singleLine="true" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:background="@color/white_color"
                                android:text="Username"
                                android:textColor="@color/pink_color"
                                android:textSize="@dimen/_10sdp">

                            </TextView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/profile_edittext_bg">

                                <EditText
                                    android:id="@+id/fullNameEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:hint="@string/enter_name"

                                    android:inputType="text"
                                    android:singleLine="true" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:background="@color/white_color"
                                android:text="@string/fullname"
                                android:textColor="@color/pink_color"
                                android:textSize="@dimen/_10sdp">

                            </TextView>
                        </FrameLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/profile_edittext_bg">

                            <EditText
                                android:id="@+id/writeAboutYouEt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="start"
                                android:hint="@string/write_about_you"
                                android:inputType="text|textMultiLine"
                                android:maxLines="4"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/white_color"
                            android:text="@string/bio_profile"
                            android:textColor="@color/pink_color"
                            android:textSize="@dimen/_10sdp">

                        </TextView>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/profile_edittext_bg"
                                        android:gravity="start">

                                        <EditText
                                            android:id="@+id/contactNumberEt"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"

                                            android:background="@null"
                                            android:drawableLeft="@drawable/ic_contact"
                                            android:gravity="center"
                                            android:hint="@string/mobile"
                                            android:inputType="number"
                                            android:maxLength="10"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp" />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/white_color"
                                        android:text="@string/contact"
                                        android:textColor="@color/pink_color"
                                        android:textSize="@dimen/_10sdp">

                                    </TextView>
                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/profile_edittext_bg"
                                        android:gravity="start">

                                        <EditText
                                            android:id="@+id/emailEt"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:drawableRight="@drawable/ic_email_id"
                                            android:gravity="center"
                                            android:hint="@string/email_hint"
                                            android:inputType="textEmailAddress"
                                            android:paddingRight="@dimen/_7sdp"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp" />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/white_color"
                                        android:text="@string/email"
                                        android:textColor="@color/pink_color"
                                        android:textSize="@dimen/_10sdp">

                                    </TextView>
                                </FrameLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/profile_edittext_bg"
                                        android:gravity="start">

                                        <EditText

                                            android:id="@+id/spin_cities"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:drawableLeft="@drawable/ic_city"
                                            android:editable="false"
                                            android:focusable="false"
                                            android:gravity="center"
                                            android:hint="@string/search"
                                            android:inputType="text"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp" />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/white_color"
                                        android:text="@string/city"
                                        android:textColor="@color/pink_color"
                                        android:textSize="@dimen/_10sdp">

                                    </TextView>
                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/profile_edittext_bg"
                                        android:gravity="start">

                                        <EditText
                                            android:id="@+id/dobEt"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:drawableRight="@drawable/ic_dob"
                                            android:editable="false"
                                            android:focusable="false"
                                            android:gravity="center"
                                            android:hint="@string/dob_hint"
                                            android:paddingRight="@dimen/_8sdp"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp" />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/white_color"
                                        android:text="@string/dob"
                                        android:textColor="@color/pink_color"
                                        android:textSize="@dimen/_10sdp">

                                    </TextView>
                                </FrameLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/profile_edittext_bg"
                                        android:gravity="start">

                                        <EditText
                                            android:id="@+id/genderEt"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:drawableLeft="@drawable/ic_gender"
                                            android:editable="false"
                                            android:entries="@array/genderarray"
                                            android:focusable="false"
                                            android:gravity="center"
                                            android:hint="@string/select"
                                            android:inputType="text"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp" />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/white_color"
                                        android:text="@string/gender"
                                        android:textColor="@color/pink_color"
                                        android:textSize="@dimen/_10sdp">

                                    </TextView>
                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/profile_edittext_bg"
                                        android:gravity="start">

                                        <EditText
                                            android:id="@+id/professionEt"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:drawableRight="@drawable/ic_profession"
                                            android:editable="false"
                                            android:focusable="false"
                                            android:gravity="center"
                                            android:hint="@string/select"
                                            android:inputType="text"
                                            android:paddingRight="@dimen/_7sdp"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp" />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@color/white_color"
                                        android:text="@string/profession"
                                        android:textColor="@color/pink_color"
                                        android:textSize="@dimen/_10sdp">

                                    </TextView>
                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSaveRegister"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/register_btn_bg"
                        android:elevation="@dimen/_3sdp"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>