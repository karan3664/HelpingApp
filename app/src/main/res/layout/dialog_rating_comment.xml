<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/roundedbackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="Please select a problem to continue"
            android:textColor="@color/pink_color"
            android:textSize="10sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/add_ping_edittext_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipReportCommentGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:chipSpacing="0dp"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:id="@+id/chip1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="Nudity"
                                android:textSize="8dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:id="@+id/chip2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="Violence"
                                android:textSize="8dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:id="@+id/chip3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="Spam"
                                android:textSize="8dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:id="@+id/chip4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="Harassment"
                                android:textSize="8dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:id="@+id/chip5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="Hate Speech"
                                android:textSize="8dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:id="@+id/chip6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="Terrorism"
                                android:textSize="8dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:id="@+id/chip7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/segoe_ui"
                                android:gravity="center"
                                android:text="Something else"
                                android:textSize="8dp" />
                        </com.google.android.material.chip.ChipGroup>


                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btnSendReport"
                android:layout_width="69dp"
                android:layout_height="17dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="140dp"
                android:background="@drawable/send_msg_btn_bg"
                android:backgroundTint="@color/pink_color"
                android:gravity="center"
                android:text="send"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_10sdp">

            </Button>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>